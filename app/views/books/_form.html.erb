<%= simple_form_for @book,url: books_path, :html => { :multipart => true} do |f| %>
   <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select add categories") %>
    
    <%= f.file_field :book_img %>
   <%= f.input :title, label: "Book Title" %>
   <%= f.input :description %>
   <%= f.input :author %>
   <%= f.button :submit %>
  

<% end %>