<div class="row">
 
 <div class="col-md-4">
<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
</div>



<div class="col-md-8">
	<div class="book-info">
<h2 class="book-title"><%= @book.title %></h2>
<h2 class="book-author"><span>From</span><%= @book.author %></h2>
<h2 class="avg-rating">Average Rating</h2>
<div class="average-review-rating" data-score=<%= @average_review %>></div>
<span class="number-of-reviews">Based on <%= @book.reviews.count %> reviews</span>
<h4>Category: <%= @book.category.name %></h4>
<p class="book-desc"><%= @book.description %></p>
 </div>
</div>
 
</div>
	<div class="col-md-4">
        <div class="reviews">
        	<h1>Purchase Book</h1>
        	<div class='pm-button'><a href='https://www.payumoney.com/sandbox/paybypayumoney/#/9577F82AD29C81664490E710541F55A9'><img src='https://www.payumoney.com/media/images/payby_payumoney/new_buttons/21.png' /></a></div> 
        
		<div>
			<%= link_to "Back", root_path, class: "btn btn-custom" %>
        </div>
 	</div>
	
</div>


<div class="row">
	<dir class="col-md-4">

          <div class="reviews">

		<h1>Reviews</h1>
		<%= render @book.reviews %>

			<%= link_to "Add Review", new_book_review_path(@book), class: "btn-custom" %>

 		</div>

 	</div>
 	
<div class="links btn-group">


<% if user_signed_in? %>
<% if @book.user_id == current_user.id %>


<%= link_to "Edit", edit_book_path(@book), class: "btn-custom" %>
<%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-custom" %>
<% end %>
<% end %>

</div>

<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function(){
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>

<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score');
		}
	});
</script>

